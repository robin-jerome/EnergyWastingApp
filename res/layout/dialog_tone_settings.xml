<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/waveformRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/waveformWhiteNoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="White noise" />

        <RadioButton
            android:id="@+id/waveformSineWave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sine wave" />

        <RadioButton
            android:id="@+id/waveformSquareWave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Square wave" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency (Hz): " />

        <EditText
            android:id="@+id/editFreq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

</LinearLayout>